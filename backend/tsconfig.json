{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "baseUrl": "./",
    "rootDirs": [
      ".",
      "../shared"
    ],
    "incremental": true,
    "allowJs": false,
    "strict": true
  },
  "include": [
    "src/**/*",
    "./index.ts"
  ]
}